<Window x:Name="ComfortStartWindow" x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="/Комфорт.ico" ResizeMode="CanResizeWithGrip" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Image x:Name="Logo" Height="108" Width="110" RenderTransformOrigin="-1.529,-0.235" Source="/Комфорт.png" Margin="38,41,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="Exit" Content="ВЫЙТИ" Margin="0,0,24,27" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="122" Click="Exit_Click" FontSize="18" FontWeight="Bold"/>
        <TextBlock TextWrapping="Wrap" Text="COMFORT" Margin="242,10,0,0" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="316" FontSize="20" TextAlignment="Center" FontWeight="Bold"/>
        <TextBlock x:Name="EnterName" TextWrapping="Wrap" Text="Введите Ваше имя" Margin="297,147,0,0" TextAlignment="Center" FontSize="20" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="206"/>
        <TextBox x:Name="UserEnterTheName" TextWrapping="Wrap" Margin="297,184,0,0" TextChanged="TextBox_TextChanged" ForceCursor="True" Height="33" VerticalAlignment="Top" HorizontalAlignment="Left" Width="206"/>
        <Button x:Name="Enter" Content="ВХОД" Margin="339,248,0,0" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="122" FontWeight="Bold" FontSize="16" Click="Enter_Click"/>

    </Grid>
</Window>
