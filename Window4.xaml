<Window x:Class="WpfApp3.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800" Icon="/Комфорт.ico">
    <Grid>
        <Button x:Name="ExitToStartMenu_Копировать" Content="НАЗАД" Margin="0,0,24,27" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="122" Click="Exit_Click" FontSize="18" FontWeight="Bold"/>
        <Image x:Name="Logo" Height="108" Width="110" RenderTransformOrigin="-1.529,-0.235" Source="/Комфорт.png" Margin="38,41,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="DeleteWorkshops" Content="УДАЛИТЬ" Margin="0,0,176,27" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="122" FontWeight="Bold" Click="DeleteWorkshops_Click"/>
        <Button x:Name="EditWorkshops" Content="ИЗМЕНИТЬ" Margin="0,0,0,27" HorizontalAlignment="Center" Width="122" FontWeight="Bold"  Click="EditWorkshops_Click" Height="34" VerticalAlignment="Bottom"/>
        <Button x:Name="AddWorkShops"  Content="ДОБАВИТЬ"  Margin="0,0,517,27" HorizontalAlignment="Right" Width="122" Height="34" VerticalAlignment="Bottom"  FontWeight="Bold"  Click="AddWorkShops_Click"/>
        <ListBox x:Name="WorkshopList" Margin="184,25,24,86">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="0 0 0 1" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Id}" Width="40" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Name}" Width="180" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding WorkshopType}" Width="120" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding StuffCount}" Width="100" Margin="10,0,0,0"/>
                            <TextBlock Text="чел." Margin="2,0,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="EditWorkshops_Копировать" Content="ИЗМЕНИТЬ" Margin="0,373,0,0" HorizontalAlignment="Center" Width="122" FontWeight="Bold"  Click="EditWorkshops_Click" Height="34" VerticalAlignment="Top"/>


    </Grid>
</Window>
