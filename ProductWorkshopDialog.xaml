<Window x:Class="WpfApp3.ProductWorkshopDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление / редактирование записи"
        Height="280" Width="400"
        WindowStartupLocation="CenterOwner" Icon="/Комфорт.ico" ResizeMode="CanResizeWithGrip">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название:" Grid.Row="0"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Margin="0,20,0,10"/>

        <TextBlock Text="Цех:" Grid.Row="1" Margin="0,5,0,0"/>
        <ComboBox x:Name="WorkshopBox" Grid.Row="1" Margin="0,25,0,10"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <TextBlock Text="Время изготовления (часы):" Grid.Row="2" Margin="0,5,0,0"/>
        <TextBox x:Name="HoursBox" Grid.Row="2" Margin="0,25,0,10"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="ОК" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Отмена" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
