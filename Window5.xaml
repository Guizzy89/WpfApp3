<Window x:Class="WpfApp3.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Window5" Height="450" Width="800" Icon="/Комфорт.ico" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Button x:Name="ExitToStartMenu_Копировать" Content="НАЗАД" Margin="0,0,24,27" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="122" Click="Exit_Click" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="DeleteProducts" Content="УДАЛИТЬ" Margin="0,0,176,27" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="122" FontWeight="Bold" Click="DeleteProducts_Click"/>
        <Button x:Name="EditProducts" Content="ИЗМЕНИТЬ" Margin="0,0,349,27" HorizontalAlignment="Right" Width="122" Height="34" VerticalAlignment="Bottom"  FontWeight="Bold"  Click="EditProducts_Click"/>
        <Button x:Name="AddProducts"  Content="ДОБАВИТЬ"  Margin="0,0,517,27" HorizontalAlignment="Right" Width="122" Height="34" VerticalAlignment="Bottom"  FontWeight="Bold"  Click="AddProducts_Click"/>
        <Image x:Name="Logo" Height="108" Width="110" RenderTransformOrigin="-1.529,-0.235" Source="/Комфорт.png" Margin="38,41,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <ListBox x:Name="ProductsList" Margin="184,25,24,86">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="0 0 0 1" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Article}" Width="60" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Name}" Width="150" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding ProductType.Name}" Width="150" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding MaterialType.Name}" Width="210" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding MinimalCost}" Width="100" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
