<Window x:Class="WpfApp3.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Продукт" Height="360" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Артикул:" Grid.Row="0" FontWeight="Bold"/>
        <TextBox x:Name="ArticleBox" Grid.Row="0" Margin="0,24,0,8" Height="26"/>

        <TextBlock Text="Название:" Grid.Row="1" FontWeight="Bold"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Margin="0,24,0,8" Height="26"/>

        <TextBlock Text="Тип продукта:" Grid.Row="2" FontWeight="Bold"/>
        <ComboBox x:Name="ProductTypeBox" Grid.Row="2" Margin="0,24,0,8" Height="26"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <TextBlock Text="Тип материала:" Grid.Row="3" FontWeight="Bold"/>
        <ComboBox x:Name="MaterialTypeBox" Grid.Row="3" Margin="0,24,0,8" Height="26"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,8,0,0">
            <TextBlock Text="Минимальная стоимость:" FontWeight="Bold"/>
            <TextBox x:Name="CostBox" Margin="0,8,0,0" Height="26"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="OkButton" Content="ОК" Width="100" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Отмена" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
