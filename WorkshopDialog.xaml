<Window x:Class="WpfApp3.WorkshopDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные цеха" Height="320" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название цеха:" FontWeight="Bold"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Margin="0,25,0,10" Height="25"/>

        <TextBlock Text="Количество сотрудников:" Grid.Row="1" FontWeight="Bold" Margin="0,5,0,0"/>
        <TextBox x:Name="StuffBox" Grid.Row="1" Margin="0,25,0,10" Height="25"/>

        <TextBlock Text="Тип цеха:" Grid.Row="2" FontWeight="Bold" Margin="0,5,0,0"/>
        <ComboBox x:Name="TypeBox" Grid.Row="2" Margin="0,25,0,10" Height="25"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="OkButton" Content="Добавить" Width="100" Margin="0,0,10,0" Click="Ok_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
            <Button Content="Отмена" Width="100" Click="Cancel_Click" Background="#E53935" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
